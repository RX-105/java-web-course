<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>Filter1</filter-name>
        <filter-class>com.n0sense.filterdemo.filter.FilterChain1</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Filter1</filter-name>
        <url-pattern>/filter</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Filter2</filter-name>
        <filter-class>com.n0sense.filterdemo.filter.FilterChain2</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Filter2</filter-name>
        <url-pattern>/filter</url-pattern>
    </filter-mapping>
    
    <listener>
        <listener-class>com.n0sense.filterdemo.listener.MySessionListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.n0sense.filterdemo.listener.MyContextListener</listener-class>
    </listener>
</web-app>